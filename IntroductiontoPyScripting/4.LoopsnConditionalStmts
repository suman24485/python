#######################################
while and for
#######################################
#!/usr/local/bin/python3.8
count=10
while(count>0):
        print("*"*count)
        count-=1
for i in range(1,10):
        print("#"*i)
myStr="test"
for c in myStr:
        print(c)
myList=["hsdkgjksg",",sadgjkfklasdjglasdfjkglfk","sdagjsdfgj"]
for s in myList:
        print(s)
for i in range(0,10):
        if i<8:
                pass
                print("in IF:", i)
        print(i)

